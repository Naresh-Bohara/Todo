<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background-color: #f4f7f6;
      padding: 20px;
    }

    .table-container {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table-container h1 {
      font-size: 1.8em;
      color: #333;
    }

    table th {
      background-color: #007bff !important;
      color: white !important;
    }

    table tr:hover {
      background-color: #f2f2f2;
    }

    .btn {
      margin-right: 5px;
    }

    .btn-warning {
      background-color: #ffc107;
      color: white;
    }

    .btn-warning:hover {
      background-color: #e0a800;
    }

    .btn-danger {
      background-color: #dc3545;
      color: white;
    }

    .btn-danger:hover {
      background-color: #c82333;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .fa {
      font-size: 1.2em;
    }

    /* Summary Section */
    .summary {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 20px;
      padding: 15px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .summary div {
      padding: 10px;
      border-radius: 5px;
      font-size: 1.1em;
      width: 30%;
      text-align: center;
      color: white;
    }

    .total {
      background-color: #6c757d; /* Neutral for total */
    }

    .completed {
      background-color: #28a745; /* Green for completed */
    }

    .remaining {
      background-color: #dc3545; /* Red for remaining */
    }

    /* Adjustments for responsiveness */
    @media (max-width: 1200px) {
      .table-container h1 {
        font-size: 1.7em;
      }

      .summary div {
        width: 30%;
      }
    }

    @media (max-width: 992px) {
      .table-container h1 {
        font-size: 1.5em;
      }

      .summary div {
        width: 45%;
      }
    }

    @media (max-width: 768px) {
      .table-container h1 {
        font-size: 1.3em;
        text-align: center;
      }

      .btn {
        width: 100%;
        margin-bottom: 10px;
      }

      .table-container {
        padding: 15px;
      }

      table th, table td {
        font-size: 0.9em;
        padding: 8px;
      }

      .table th, .table td {
        text-align: center;
      }

      .summary div {
        width: 100%;
        margin-bottom: 10px;
      }
    }

    @media (max-width: 576px) {
      .table-container {
        padding: 10px;
      }

      table th, table td {
        font-size: 0.85em;
      }

      table th, table td {
        padding: 10px;
      }

      .btn {
        width: 100%;
        margin-bottom: 15px;
      }

      .table-container h1 {
        font-size: 1.2em;
        text-align: center;
      }

      .summary div {
        width: 100%;
      }
    }

    @media (max-width: 400px) {
      .table-container h1 {
        font-size: 1.1em;
      }

      table th, table td {
        font-size: 0.8em;
        padding: 8px;
      }

      .table th, .table td {
        text-align: center;
      }

      .btn {
        width: 100%;
        margin-bottom: 12px;
      }

      .table-container {
        padding: 8px;
      }

      .btn-warning, .btn-danger, .btn-primary {
        font-size: 0.9em;
        padding: 8px;
      }

      .fa {
        font-size: 1em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="table-container">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Todo List</h1>
            <a href="/api/v1/todos/new" class="btn btn-primary">Add Task</a>
          </div>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% todos.forEach(todo => { %>
                <tr>
                  <td><%= todo.title %></td>
                  <td><%= todo.description %></td>
                  <td><%= todo.status %></td>
                  <td>
                    <a href="/api/v1/todos/<%= todo._id %>/edit" class="btn btn-warning btn-sm">
                      <i class="fa-solid fa-edit"></i> Edit
                    </a>
                    <form action="/api/v1/todos/<%= todo._id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="summary">
          <div class="total">
            <strong>Total</strong><br>
            <span><%= todos.length %></span>
          </div>
          <div class="completed">
            <strong>Completed</strong><br>
            <span><%= todos.filter(todo => todo.status === 'completed').length %></span>
          </div>
          <div class="remaining">
            <strong>Remaining</strong><br>
            <span><%= todos.filter(todo => todo.status !== 'completed').length %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
